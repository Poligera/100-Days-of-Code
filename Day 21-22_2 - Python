from turtle import Turtle
import random


class Food(Turtle):
    """Food class: a child class inherited from Turtle parent class. A turtle object displayed at random locations."""

    def __init__(self):
        super().__init__()
        self.shape("turtle")
        self.penup()
        self.shapesize(stretch_len=0.5, stretch_wid=0.5)
        self.color("pink")

    def refresh(self):
        random_x = random.randint(-270, 270)
        random_y = random.randint(-270, 270)
        self.goto(random_x, random_y)
